<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.internationalwhispers.client.presentation.controller.playerdomain.LoginController"
      prefHeight="400.0" prefWidth="300.0" alignment="CENTER" spacing="10.0"
      stylesheets="@../../css/style.css">
    <Label wrapText="true" text="Login" styleClass="header"/>
    <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>
    <Button text="Login" onAction="#onLoginButtonClick" styleClass="login-button"/>
    <Hyperlink text="Not registered? Signup here" onAction="#onSignupLinkClick"/>
</VBox>